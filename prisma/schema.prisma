generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DailyNote {
  id              String   @id @default(cuid())
  date            DateTime @unique
  rawText         String
  yesterday       String?
  today           String?
  blockers        String?
  proseSummary    String?
  actionItems     String?
  taskCategory    String?
  taskDescription String?
  taskSummary     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

